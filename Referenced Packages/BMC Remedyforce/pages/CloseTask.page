          function ClosedByEmpty(){
             isClosedByEmpty ='False';
             var chkClosedBy= document.getElementById('{!$Component.taskCloseForm.User_id_username}').value;              
             if(chkClosedBy!=null && chkClosedBy!=''){ 
                    isClosedByEmpty ='False';
                } else {
