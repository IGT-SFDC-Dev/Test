           sysDisable = '{!sysDisable}';
              
           function disableSystemEntry(sysDisable){
                  
                                                               
                   if(sysDisable == 'false' && (HistoryId != null && HistoryId != '')) {
                        document.getElementById('{!$Component.formId.User_id_username}').readOnly= true;                                                            
